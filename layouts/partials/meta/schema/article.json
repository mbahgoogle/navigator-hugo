
<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "Article",
  "author": {
    "name" : "{{ .Params.author  | default .Site.Params.author}}"
  },
  "headline": "{{ .Title | safeJS }}",
  "description": "{{ .Params.description | default .Site.Title | safeJS }}",
  "wordCount": {{ .WordCount }},
  "datePublished" : "{{ .Date.Format "2006-01-02T15:04:05" }}",
  "dateModified" : "{{ .Page.Lastmod.Format "2006-01-02T15:04:05"  }}",
  "image" : {
      "@context": "http://schema.org",
      "@type": "ImageObject",
      "url": "https://ce880219c.cloudimg.io/width/2000/x/{{ .Params.thumbnail | default "/banner-amp.PNG" | absURL }}",
      "datePublished": "{{ .Date.Format "2006-01-02T15:04:05" }}",
      "name": "{{ .Title }}",
      "height" : 500,
      "width" : 800,
      "license" : "CC BY 2.0",
      "isBasedOn" : "https://creativecommons.org/licenses/by/2.0/"
    },
  "mainEntityOfPage" : "{{ .Permalink | safeURL }}",
  "publisher" : {
    "@type": "Organization",
    "name" : "{{ $.Site.Title }}",
    "logo" : {
        "@type" : "ImageObject",
        "url" : "{{ $.Site.Params.siteLogo | absURL }}",
        "height" : 60,
        "width" : 600
    }
  }
}
</script>